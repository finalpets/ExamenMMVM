<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peterleyva.examenmvvm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserRegisterActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activities.AdministratorActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.StatusBar" />
        <activity
            android:name=".activities.NewSucursalAcivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.AdministratorActivity" />
        <activity android:name=".activities.EmployeeRegisterActivity"
            android:parentActivityName=".activities.AdministratorActivity"
            />
    </application>

</manifest>